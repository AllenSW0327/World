cost:
            await interaction.response.send_message(f"ëˆì´ ë¶€ì¡±í•©ë‹ˆë‹¤! {cost}ê³¨ë“œê°€ í•„ìš”í•´ìš”.", ephemeral=True)
            return

        user["money"] -= cost
        if upgrade_type == "income":
            user["income_level"] += amount
            msg = f"ìˆ˜ìµ ë ˆë²¨ì´ {amount}ë§Œí¼ ìƒìŠ¹í–ˆìŠµë‹ˆë‹¤! í˜„ì¬ ë ˆë²¨: {user['income_level']}"
        else:
            user["military"] += amount * 10
            msg = f"êµ°ì‚¬ë ¥ì´ {amount*10}ë§Œí¼ ì¦ê°€í–ˆìŠµë‹ˆë‹¤! í˜„ì¬ êµ°ì‚¬ë ¥: {user['military']}"

        save_data(data)
        await interaction.response.send_message(msg, ephemeral=True)

